<!DOCTYPE html>
<html>
  <head>
    <title>Vagrant</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header>
    <nav>
      <% if account_signed_in? %>
        <%= link_to "ユーザー一覧", {controller: 'accounts/registrations', action: 'index'} %>
        <%= link_to 'プロフィール変更', edit_account_registration_path %>
        <%= link_to 'ログアウト', destroy_account_session_path, method: :delete %>
      <% else %>
        <%= link_to 'サインアップ', new_account_registration_path %>
        <%= link_to 'ログイン', new_account_session_path %>
      <% end %>
      </nav>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

  </body>
</html>
