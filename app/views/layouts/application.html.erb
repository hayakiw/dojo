<script type="text/javascript">
$(document).ready(function() {
  $("a.open").fancybox({
    'width'       : '70%',
    'height'      : '70%',
    // 'minWidth'   : 1000,
    'minHeight'     : 400,
    'scrolling'     : 'yes', 
    'autoScale'     : false,
    /* 'transitionIn' : 'none',
    'transitionOut'   : 'none',*/
    'closeEffect'   : 'none',
    'hideOnOverlayClick': true,
    'hideOnContentClick': false,
    'type'        : 'iframe',
    helpers: {
      overlay: {
        speedIn: 0,
        speedOut: 0.01,
        closeClick: true
      },
    },
  });
});

$(document).ready(function() {
  $('#check_status').on('click', function(){
    var url = location.href;
    var new_url = url.replace(/\?.*$/,"");
    if ($(this).prop("checked")){
      new_url += "?status=1";
    }
    location.href = new_url;
  });
});
</script>
