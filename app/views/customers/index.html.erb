
<p id="notice"><%= notice %></p>


<script type="text/javascript">
$(document).ready(function() {
  $("a.open").fancybox({
    'width'       : '70%',
    'height'      : '70%',
    // 'minWidth'   : 1000,
    'minHeight'     : 400,
    'scrolling'     : 'yes', 
    'autoScale'     : false,
    /* 'transitionIn' : 'none',
    'transitionOut'   : 'none',*/
    'closeEffect'   : 'none',
    'hideOnOverlayClick': true,
    'hideOnContentClick': false,
    'type'        : 'iframe',
    helpers: {
      overlay: {
        speedIn: 0,
        speedOut: 0.01,
        closeClick: true
      },
    },
  });
});     
</script>


<div class="wrapper">
  <section class="list">
    <div class="sectionHeader clearfix">
      <div class="title fl">
        <h1>顧客一覧</h1>
      </div>
      <!-- / .title -->
      <div class="extra fl"><%= link_to '新規顧客追加', new_customer_path ,class: "btn addition open"  %></div>
      <div class="extra fl">
        <form class="form">
          <label class="display">
            <input type="checkbox" />
            無効も表示</label>
        </form>
      </div>
    </div>
    <!-- / .sectionHeader -->
    <div class="contents list">
      <table class="deco-tb fs4">
        <thead>
         <tr>
           <th class="w55">顧客名</th>
           <th class="w10">ステータス</th>
           <th class="w15">プロジェクト数</th>
           <th class="w10">編集</th>
           <th class="w10">削除</th>
         </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= customer.status %></td>
              <td><%= link_to 'Show', customer %></td>
              <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
              <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>


      </table>
      <ul class="pagination">
        <li class="disabled"><a rel="prev" href="#" class="prev">«</a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a rel="next" href="#" class="next">»</a></li>
      </ul>
    </div>
    <!-- / .contents.list -->
  </section>
  <!-- / section -->
</div>
